<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/week_style"
    tools:context="com.example.weatherwithfragment.WeekFragment" >


    <TextView
        android:id="@+id/weatherLink"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/sky_blue"
        android:gravity="center_vertical|center_horizontal"
        android:text="Weather Link"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weather_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:background="@color/sky_blue"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/_7_days_forecast"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weather_border"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/weather_title"
        android:background="#CCCCCC" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_border" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_sky_blue"

                >

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/icon"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/icon"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tempText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateText"
                    android:layout_toRightOf="@+id/icon"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tempText"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/icon"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/humidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/descriptionText"
                    android:layout_toRightOf="@+id/icon"

                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/windText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/humidityText"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/icon"
                    android:paddingBottom="10dp"

                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/weather"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/weather_foggy"
                    android:layout_alignParentTop="true"
                    android:textSize="70sp"
                    android:padding="10dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/border2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#041985" />

            <TextView
                android:id="@+id/forecast_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#bebebe"
                android:gravity="center_vertical|center_horizontal"
                android:text="Forecast"
                android:textColor="@color/black"

                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/forecastBorder"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/day1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aqua"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquamarine"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/day3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aqua"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/day4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquamarine"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aqua"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/day6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquamarine"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/day7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aqua"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textAlignment="gravity"

                android:textSize="16sp" />






        </LinearLayout>


    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollView1"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background" />


</RelativeLayout>